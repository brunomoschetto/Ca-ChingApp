<h1>Products</h1>

<%= link_to "See my cart", cart_path, class: "cart-link" %>

<ul>
  <% @products.each do |product| %>
    <li>
      <%= product.name %> - <%= number_to_currency(product.price) %>
        <%= form_with(url: add_product_cart_path(product_id: product.id), method: :post) do |form| %>
          <%= form.submit "Add product to cart" %>
        <% end %>
  <% end %>
</ul>
