<h1>Your Cart</h1>

<%= link_to "Back to products", products_path %>

<% if @cart.cart_items.empty? %>
  <p>Your cart is empty :(</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tbody>
      <% @cart.cart_items.each do |item| %>
        <tr>
          <td><%= item.product.name %></td>
          <td><%= number_to_currency(item.product.price) %></td>
          <td><%= item.quantity %></td>
          <td><%= number_to_currency(item.product.price * item.quantity) %></td>
          <td>
            <%= button_to "Remove", remove_item_cart_path(cart_item_id: item.id), method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="3">Total price</th>
        <th><%= number_to_currency(@cart.total_price) %></th>
      </tr>
    </tfoot>
  </table>
<% end %>
